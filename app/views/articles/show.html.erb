<h1 style="margin:20px">Mon article :</h1>
<div class="container" style="width:90%;border:2px solid black;background-color:lightgrey">
  <h3 style="font-style:bold;font-size:28px"><%= @this_article.title %></h3>
  <% if @this_article.category %>
    <p>(<%= @this_article.category.name %>)<p>
  <% end %>
  <p style="font-size:20px"><%= @this_article.content %></p>
  <p style="font-style:italic;float:right">- <%= @this_article.author %></p>
  <br><br>
  <%= form_tag "/articles/#{@this_article.id}", method: "delete" do %>
    <button type="submit" class="btn btn-danger" style="display:block;margin:auto">
      <span class="glyphicon glyphicon-remove-sign"> Supprimer l'article</span>
    </button>
  <% end %>
  <br>
</div>
<br>

<div class="container">
  <ul class="list-group">
    <% @article_comments.each do |comment| %>
      <li class="list-group-item">
        <p><%= comment.content %><p>
        <p>(Par : <%= comment.author %>)</p>
      </li>
    <% end %>
  </ul>
</div>

<br>
<div class="container" style="margin:auto">
  <%= form_tag "/articles/#{@this_article.id}", method: "post" do %>
    <label for"author">Auteur : </label>
    <input type="text" name="author" placeholder="votre pseudo"/>
    <textarea style="width:100%;height:150px" name="content" placeholder="Ecrire un commentaire"/></textarea>
    <input type="submit" value="Ajouter mon commentaire" />
  <% end %>
  <br>
</div>
<br>
<div >
  <a href="/articles" style="width:300px;display:block;margin:auto" class="btn btn-primary">Retourner à l’index des articles</a>
</div>
